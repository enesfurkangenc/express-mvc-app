extends layout

block content
    div(class='row')
        h1 Login
        form(action = "/login/login" method = "POST" class='form')
            div(class='row')
                label(for='email' class='col-sm-2') Email
                div(class='col-sm-10')
                    input(id='email' name='email' class='form-control' type = "text" placeholder = "Email" required)
            div(class='row')
                label(for='password' class='col-sm-2') Password
                div(class='col-sm-10')
                    input(id='password' name='password' class='form-control' type = "password" placeholder = "Password" required)
            button(type = "Submit" class='button') Log in
    h2 #{message}